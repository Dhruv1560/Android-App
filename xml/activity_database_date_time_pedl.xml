<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/randommmmm"
    tools:context=".DatabaseDateTimePedl">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Service-Type:  "
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/database_service_pedl"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Location :        "
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/database_location_pedl"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Pickup-Date:  "
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/database_pickupdate_pedl"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Dropoff-Date: "
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/database_dropoffdate_pedl"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Pickup-Time:  "
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/database_pickuptime_pedl"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Dropoff-Time: "
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/database_dropofftime_pedl"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:id="@+id/database_confirm_pedl"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/White"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/nav_header_shape"
            android:text="Confirm"
            android:layout_width="150dp"
            android:layout_height="60dp" />

    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>