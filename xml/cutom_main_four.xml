<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView
            android:background="@drawable/symbol"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/custom_main_image_four"
            android:layout_width="230dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/custom_main_name_four"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:textSize="20dp"
                android:text="Suzuki Swift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/custom_main_seater_four"
                android:layout_marginTop="5dp"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:text="Suzuki Swift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/custom_main_type_four"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:text="Suzuki Swift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/custom_main_year_four"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:text="Suzuki Swift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>

        <TextView
            android:id="@+id/custom_main_price_four"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="210dp"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:text="500$"
            android:layout_width="70dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/custom_main_button_book_four"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/customshap"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/White"
            android:text="Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>

</android.support.v7.widget.CardView>