<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_car_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="150dp">

               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/Black"
                   android:id="@+id/card_car_name"
                   android:layout_marginLeft="20dp"
                   android:textSize="20dp"
                   android:text="Suzuki Swift"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/Black"
                    android:layout_marginTop="10dp"
                    android:id="@+id/card_car_seater"
                    android:layout_gravity=""
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:text="Suzuki Swift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/Black"
                    android:id="@+id/card_car_type"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:text="Suzuki Swift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/Black"
                    android:id="@+id/card_car_year"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:text="Suzuki Swift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:background="@drawable/border_grey"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Black"
                    android:id="@+id/card_car_price"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:text="Suzuki Swift"
                    android:layout_width="60dp"
                    android:layout_height="30dp" />


            </LinearLayout>

            <Button
                android:id="@+id/card_btn_car"
                android:backgroundTint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_marginLeft="250dp"
                android:textColor="@color/White"
                android:background="@drawable/customshap"
                android:text="Book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>