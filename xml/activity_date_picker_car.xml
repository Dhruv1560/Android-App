<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/randommmmm"
    tools:context=".DatePickerCar">

    <TextView
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="190dp"
        android:textColor="@color/red"
        android:textSize="35dp"
        android:textAllCaps="true"
        android:text="cars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/symbol1"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear1"
        android:background="@drawable/border_green"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Spinner
            android:id="@+id/date_spinner_car"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="180dp"
            android:layout_height="30dp">

        </Spinner>

        <AutoCompleteTextView
            android:hint="  Location"
            android:id="@+id/date_location_car"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_below="@id/linear1"
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:background="@drawable/border_green"
            android:id="@+id/pickup_date_car"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:id="@+id/date_tv_pickup"
                android:text="PickUp Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/date_iv_pickup"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_green"
            android:layout_marginLeft="30dp"
            android:id="@+id/dropoff_date_car"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_tv_dropoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Dropoff Date"
                android:textColor="@color/Black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/date_iv_dropoff"
                android:background="@drawable/calendar"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_below="@id/linear2"
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:background="@drawable/border_green"
            android:id="@+id/pickup_time_car"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:id="@+id/time_tv_pickup"
                android:text="PickUp Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/time_iv_pickup"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clock"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_green"
            android:layout_marginLeft="30dp"
            android:id="@+id/dropoff_time_car"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_tv_dropoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Dropoff Time"
                android:textColor="@color/Black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/time_iv_dropoff"
                android:background="@drawable/clock"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/nav_header_shape"
        android:id="@+id/date_book_car"
        android:text="Find Cars"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/linear3"
        android:layout_width="150dp"
        android:layout_height="60dp" />


</RelativeLayout>