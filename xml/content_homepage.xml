
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dhruvpatel.login.Homepage"
    tools:showIn="@layout/app_bar_homepage">




    <LinearLayout
        android:id="@+id/linear1"
        android:background="@drawable/bluecars"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="392dp"
        android:layout_height="400dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/customshap"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/homepage_car"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/four1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:text="CARS"
                    android:textColor="@color/Black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/homepage_pedl"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"

                    android:background="@drawable/two" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:text="PEDL"
                    android:textColor="@color/Black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/White"
        >

        <TextView
            android:id="@+id/deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/ad2"
                android:layout_marginBottom="40dp"
                />

            <ImageView
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/ad3"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

