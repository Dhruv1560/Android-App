<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".Upload_pedl_image">

    <LinearLayout
        android:background="@color/randommmmm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:id="@+id/upload_tv_title_pedl"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:text="Upload For PEDL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:layout_marginTop="40dp"
                android:layout_below="@id/upload_tv_title_pedl"
                android:background="@drawable/border_grey"
                android:backgroundTint="@color/red"
                android:id="@+id/upload_btn_chooseimage_pedl"
                android:textColor="@color/White"
                android:text="Choose image"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
           <!-- <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/upload_et_pedl_imagename"
                android:hint="Enter pedl Image name"
                android:layout_below="@+id/upload_btn_chooseimage_pedl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->

            <EditText
                android:layout_marginTop="50dp"
                android:id="@+id/upload_et_pedl_name"
                android:hint="Enter pedl name"
                android:layout_below="@+id/upload_btn_chooseimage_pedl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/upload_et_pedl_cc"
                android:hint="Enter CC"
                android:layout_below="@+id/upload_et_pedl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/upload_et_pedl_year"
                android:hint="Enter year of pedl"
                android:layout_below="@+id/upload_et_pedl_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/upload_et_pedl_price"
                android:hint="Enter pedl price"
                android:layout_below="@+id/upload_et_pedl_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/upload_et_pedl_price"
                android:id="@+id/upload_iv_pedl"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

          <!--  <ProgressBar
                android:layout_marginTop="20dp"
                android:layout_below="@id/upload_iv_pedl"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/upload_progressbar_pedl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />   -->

            <Button
                android:background="@drawable/border_grey"
                android:backgroundTint="@color/red"
                android:textColor="@color/White"
                android:layout_marginTop="20dp"
                android:id="@+id/upload_btn_upload_pedl"
                android:layout_centerHorizontal="true"
                android:text="Upload"
                android:layout_below="@id/upload_iv_pedl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_grey"
                android:backgroundTint="@color/red"
                android:textColor="@color/White"
                android:text="Show"
                android:layout_below="@+id/upload_btn_upload_pedl"
                android:id="@+id/upload_btn_showdown_pedl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>