<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/randommmmm"
    tools:context=".AdminPage">


    <ImageView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/user"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:fontFamily="cursive"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="190dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:text="Admin Side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/admin_Cardview_car"
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="150dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:text="For Car Details:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/admin_btn_car"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/border_grey"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/White"
            android:text="Car Details"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/admin_Cardview_car"
        android:id="@+id/admin_cardview_pedl"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="150dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:text="For Pedl Details:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/admin_btn_pedl"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/border_grey"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/White"
            android:text="Pedl Details"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>

</RelativeLayout>