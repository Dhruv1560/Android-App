<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".Upload_car_image">

    <LinearLayout
        android:background="@color/randommmmm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:id="@+id/upload_tv_title_car"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:text="Upload For CAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



    <Button
        android:layout_marginTop="40dp"
        android:layout_below="@id/upload_tv_title_car"
        android:background="@drawable/border_grey"
        android:backgroundTint="@color/red"
        android:id="@+id/upload_btn_chooseimage_car"
        android:textColor="@color/White"
        android:text="Choose image"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/upload_et_carname"
        android:hint="Enter car name"
        android:layout_below="@+id/upload_btn_chooseimage_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upload_et_seater_car"
        android:hint="Enter Seater"
        android:layout_below="@+id/upload_et_carname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upload_et_year_car"
        android:hint="Enter year of car"
        android:layout_below="@+id/upload_et_seater_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upload_et_type_car"
        android:hint="Enter car Fuel type"
        android:layout_below="@+id/upload_et_year_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/upload_et_price_car"
        android:hint="Enter car price"
        android:layout_below="@+id/upload_et_type_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/upload_et_price_car"
        android:id="@+id/upload_iv_car"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!--<ProgressBar
        android:layout_marginTop="20dp"
        android:layout_below="@id/upload_iv_car"
        android:id="@+id/upload_progressbar_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />   -->


    <Button
        android:background="@drawable/border_grey"
        android:backgroundTint="@color/red"
        android:textColor="@color/White"
        android:layout_marginTop="20dp"
        android:id="@+id/upload_btn_upload_car"
        android:layout_centerHorizontal="true"
        android:text="Upload"
        android:layout_below="@id/upload_iv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_grey"
        android:backgroundTint="@color/red"
        android:textColor="@color/White"
        android:text="Show"
        android:layout_below="@+id/upload_btn_upload_car"
        android:id="@+id/upload_btn_showdown_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>